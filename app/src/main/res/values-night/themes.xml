<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OPTIX.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/light_blue</item>
        <item name="titleTextColor">@color/light_blue</item>
        <item name="titleTextStyle">@font/poppins_bold</item>
        <item name="actionOverflowButtonStyle">@color/light_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/light_blue</item>
        <item name="titleTextStyle">@font/poppins_bold</item>
    </style>

    <style name="PoppinTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    //Dark Mode
    //Backgroud
    <style name="Screen">
        <item name="android:background">@color/blue_banner2</item>
    </style>

    <style name="Nav_Screen">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="backgorund_field">
        <item name="android:background">@drawable/corner_15dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    //searchview
    <style name="searchview" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/corner_blue_15dp</item>
        <item name="android:hint">@string/searchbar_hint</item>
    </style>

    //text
    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_2">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Text_3">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:textAppearance">@font/poppins_extra_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text_hint">
        <item name="hintTextColor">@color/black</item>
        <item name="hintTextAppearance">@font/poppins_thin</item>
    </style>

    //Button
    <style name="Button">
        <item name="android:background">@drawable/corner_15dp</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    //Line
    <style name="line">
        <item name="android:background">@color/dark_blue</item>
    </style>

    //Icon
    <drawable name="icon_person">@drawable/baseline_person_outline_24</drawable>
    <drawable name="icon_email">@drawable/baseline_mail_24</drawable>
    <drawable name="icon_call">@drawable/baseline_call_24</drawable>

    //nav icon color
    <style name="nav_icon">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemTextAppearance">@font/poppins_bold</item>
        <item name="android:background">@color/dark_blue</item>
    </style>

</resources>